<h2>Words in the Dictionary</h2>
<a href="./" class="btn btn-default"><i class="fa fa-search"></i> Find Your Anagram!</a>

    <table class="table table-hover">
<thead style="text-align:center">
    <th style="text-align:center">Text</th>
    <th style="text-align:center">Letters</th>
    </thead>
<tbody>
    <% if !@word.all.nil? %>
    <% @word.sort.each do |word| %>
    <tr>

    <tr class="text-uppercase">
    <td style="text-align:center">
        <a href="<%= "/words/#{word.id}" %>"><%= word.text %></a>
        </td>
        <td style="text-align:center">
        <%= word.letters %>
                  </td>
        <td style="text-align:center"><a href="<%= "/words/#{word.id}/edit" %>" class="btn btn-primary" role="button"><i class="fa fa-pencil"></i> Edit</a></td>
        <td style="text-align:center"><form action="<%= "/words/#{word.id}" %>" method="post">
            <input type="hidden" name="_method" value="delete" />
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
            </form></td>
    </tr>
    <% end %>
    <% end %>
    </tbody>
</table>
