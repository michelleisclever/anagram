<h2>Words</h2>

    <table class="table table-striped">
<thead style="text-align:center">
    <th style="text-align:center">Text</th>
    <th style="text-align:center">Letters</th>
    </thead>
<tbody>
    <% if !@word.all.nil? %>
    <% @word.each do |word| %>
    <tr>

    <tr>
    <td style="text-align:center">
        <a href="<%= "/words/#{word.id}" %>"><%= word.text %></a>
        </td>
        <td style="text-align:center">
        <%= word.letters %>
                  </td>
        <td style="text-align:center"><a href="<%= "/words/#{word.id}/edit" %>">Edit</a></td>
    </tr>
    <% end %>
    <% end %>
    </tbody>
</table>
<a href="./" class="btn btn-default">Try A New Word!</a>