<h2>Welcome to my</h2>
<h3>ANAGRAM GENERATOR</h3>

<form role="form" action="/" method="post" class="form">
    <div class="form-group">
<label for="word">Enter a word. Only 3 letters please!</label>
<input type="text" class="form-control" name="word">
    </div>
    <% if !@errors.present? %>
<div class="text-danger">
<p>
    <%= "#{@error}" %>
</p>
    </div>
    <% end %>
    <button type="submit" class="btn btn-default">Show Me My Anagrams!</button>
</form>