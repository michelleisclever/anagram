<h2>Welcome to my</h2>
<h3>ANAGRAM GENERATOR</h3>

<form role="form" action="/" method="post" class="form">
    <div class="form-group">
    <label for="word">Enter a word. If there are no results, add a word to the dictionary!</label>
        <div class="input-group margin-bottom-sm">
            <span class="input-group-addon"><i class="fa fa-search"></i></span>
<input type="text" class="form-control" name="word" placeholder="Enter a word">
        </div>
    </div>
    <% if !@errors.present? %>
<div class="text-danger">
<p class="error">
    <%= "#{@error}" %>
</p>
    </div>
    <% end %>
    <button type="submit" class="btn btn-default"><i class="fa fa-eye" ></i> Show Me My Anagrams!</button>
</form>